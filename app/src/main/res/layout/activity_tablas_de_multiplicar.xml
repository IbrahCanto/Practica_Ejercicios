<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tablas_de_Multiplicar" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="60px"
            android:text="Ingrese un numero para ver su tabla de multiplicar"
            android:layout_marginTop="100px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ediText"
            android:layout_width="100dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="200dp"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:gravity="center"
            android:inputType="number">

        </EditText>


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="150dp"
            android:layout_below="@+id/et1"
            android:onClick="Tabla"
            android:text="Resultado" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="490px"
            android:layout_marginTop="370dp"
            android:layout_marginRight="370px"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="20dp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:paddingLeft="50dp">

        <Button
            android:id="@+id/btnatras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:onClick="Anterior"
            android:text="Atras" />



    </LinearLayout>



</RelativeLayout>